{
  "name": "screenface",
  "productName": "ScreenFace",
  "version": "1.0.0",
  "description": "Electron screen & window recorder with smart switching, preview, and facecam",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "keywords": ["electron", "screen-recorder", "capture", "facecam", "recording"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "active-win": "^7.6.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^0.22.12"
  },
  "build": {
    "appId": "com.screenface.app",
    "productName": "ScreenFace",
    "directories": { "output": "dist" },
    "files": ["main/**/*", "preload/**/*", "renderer/**/*", "assets/**/*"],
    "mac": {
      "category": "public.app-category.video",
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "ScreenFace ${version}",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ],
      "window": { "width": 540, "height": 380 }
    },
    "win": {
      "target": [{ "target": "nsis", "arch": ["x64"] }]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ScreenFace",
      "license": "LICENSE",
      "wizardStyle": "modern"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Video"
    }
  }
}
